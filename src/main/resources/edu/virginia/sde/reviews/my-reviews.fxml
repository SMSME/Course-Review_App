<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="edu.virginia.sde.reviews.MyReviewsController"
            prefHeight="720.0" prefWidth="1280.0">

        <top>
            <AnchorPane>
                <!--<HBox AnchorPane.leftAnchor="0">
                    <Button mnemonicParsing="false" onAction="#backToCourseSearch" text="Course Search"/>
                </HBox>-->
                <HBox spacing="20.0">
                    <Button mnemonicParsing="false" onAction="#backToCourseSearch" text="Course Search"/>
                    <Label text="Mnemonic"/>
                    <Label text="Number"/>
                    <Label text="Rating"/>
                    <Label text = "Title"/>
                </HBox>
                <HBox  AnchorPane.rightAnchor="0">
                    <Button mnemonicParsing="false" onAction="#onLogout" text="Logout"/>
                </HBox>
            </AnchorPane>
        </top>

        <center>
            <VBox fx:id="box" alignment = "CENTER" spacing="5.0">
                <Label fx:id="messageLabel" text="The user has no reviews" visible="false"/>
            </VBox>
            <VBox>
                <ScrollPane VBox.vgrow="ALWAYS" fitToHeight="true" fitToWidth="true">
                    <content>
                        <ListView fx:id="reviewListView"/>
                    </content>
                </ScrollPane>
            </VBox>
        </center>
