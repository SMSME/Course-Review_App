<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="edu.virginia.sde.reviews.MyReviewsController"
            prefHeight="720.0" prefWidth="1280.0">

        <top>
            <AnchorPane>
                <HBox AnchorPane.leftAnchor="0">
                    <Button mnemonicParsing="false" onAction="#backToCourseSearch" text="Course Search"/>
                </HBox>

                <HBox  AnchorPane.rightAnchor="0">
                    <Button mnemonicParsing="false" onAction="#onLogout" text="Logout"/>
                </HBox>
            </AnchorPane>
        </top>
        <center>
            <VBox>
                <HBox alignment="CENTER" spacing = "5.0">
                    <Label fx:id="courseMnemonic" text="Course Mnemonic"/>
                    <Label fx:id="courseNumber" text = "Course Number"/>
                    <Label fx:id="courseRating" text = "Course Rating"/>
                </HBox>
                <ListView fx:id="reviewListView" prefHeight="200.0" prefWidth="300.0">

                </ListView>
            </VBox>
        </center>



</BorderPane>
