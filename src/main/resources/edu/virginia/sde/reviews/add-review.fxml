<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<StackPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="edu.virginia.sde.reviews.AddReviewController"
            prefHeight="720.0" prefWidth="1280.0">

    <VBox alignment="CENTER" spacing="10.0">

        <HBox alignment="CENTER" spacing="5.0">
            <Label text="Rating (1-5):"/>
            <TextField promptText="Required" fx:id="ratingField"/>
        </HBox>

        <HBox alignment="CENTER" spacing="5.0">
            <Label text="Comment:" style="-fx-padding: 0 10 0 0;"/>
            <TextField promptText="Optional" fx:id="commentField"/>
        </HBox>

        <VBox alignment="CENTER" style="-fx-padding: 0 0 0 0;">
            <Button mnemonicParsing="false" onAction="#addRating" prefWidth="232" text="Add Review"/>
            <Label fx:id="message"/>
            <Button mnemonicParsing="false" onAction="#backButton" prefWidth="232" text="Back to Course Reviews"/>
        </VBox>

    </VBox>
</StackPane>
