<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>


<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="edu.virginia.sde.reviews.CourseSearchController"
      prefHeight="400.0" prefWidth="600.0"
      alignment="TOP_CENTER" style="-fx-padding: 20 0 0 0;">

    <HBox spacing="10.0" alignment="CENTER">
        <VBox alignment="CENTER_RIGHT" spacing="10.0" style="-fx-padding: 0 10 0 0;">
            <TextField fx:id="searchSubject" promptText="Subject" />
        </VBox>

        <VBox alignment="CENTER_RIGHT" spacing="10.0" style="-fx-padding: 0 10 0 0;">
            <TextField fx:id="searchNumber" promptText="Course Number"/>
        </VBox>

        <VBox alignment="CENTER_RIGHT" spacing="10.0" style="-fx-padding: 0 10 0 0;">
            <TextField fx:id="searchTitle" promptText="Course Title"/>
        </VBox>

        <Button text="Search" onAction="#handleButtonClick" />
    </HBox>
</VBox>
