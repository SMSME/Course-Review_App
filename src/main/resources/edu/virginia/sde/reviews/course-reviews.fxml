<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.scene.control.cell.PropertyValueFactory?>
<AnchorPane xmlns="http://javafx.com/javafx"
            stylesheets="/Styles/CourseSearchController.css"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="edu.virginia.sde.reviews.CourseReviewsController"
            prefHeight="720.0" prefWidth="1280.0"
>
    <VBox AnchorPane.leftAnchor="181" AnchorPane.topAnchor="45">
        <HBox alignment="CENTER" spacing="15.0">
            <Label fx:id="courseSubjectLabel" style="-fx-font-size: 32;"/>
            <Label fx:id="courseNumberLabel" style="-fx-font-size: 32;"/>
            <Label fx:id="courseTitleLabel" style="-fx-font-size: 32;"/>
            <Label text="Course Reviews" style="-fx-font-size: 32;"/>

        </HBox>
        <HBox alignment="CENTER" spacing="11.25">
            <Label text="Average Rating:" style="-fx-font-size: 24;"/>
            <Label fx:id="averageRatingLabel" style="-fx-font-size: 24;"/>
        </HBox>

        <ScrollPane VBox.vgrow="ALWAYS" fitToHeight="true" fitToWidth="true">
            <content>
                <TableView fx:id="reviewTableView" layoutX="47.0" layoutY="137.0" prefHeight="500.0" prefWidth="918.0" VBox.vgrow="ALWAYS">
                    <columns>
                        <TableColumn text="Rating" fx:id="ratingColumn">
                            <cellValueFactory>
                                <PropertyValueFactory property="rating" />
                            </cellValueFactory>
                        </TableColumn>
                        <TableColumn text="Comment" fx:id="commentColumn" prefWidth="556">
                            <cellValueFactory>
                                <PropertyValueFactory property="comment" />
                            </cellValueFactory>
                        </TableColumn>
                        <TableColumn text="Timestamp" fx:id="timestampColumn" prefWidth="187">
                            <cellValueFactory>
                                <PropertyValueFactory property="timestamp" />
                            </cellValueFactory>
                        </TableColumn>
                    </columns>
                </TableView>
            </content>
        </ScrollPane>
        <HBox alignment="CENTER">
            <Button mnemonicParsing="false" onAction="#addReview" text="Add Review" prefWidth="918"/>
        </HBox>
    </VBox>

    <VBox visible="false">
        <TextField fx:id="newReviewRating" promptText="Subject"/>
        <TextField fx:id="newReviewComment" promptText="Number"/>
        <Button text="Submit" onAction="#submitReview"/>
    </VBox>
    <VBox visible="false">
        <TextField fx:id="editReviewRating" promptText="Subject"/>
        <TextField fx:id="editReviewComment" promptText="Number"/>
        <Button text="Submit" onAction="#submitReview"/>
    </VBox>
    <Button mnemonicParsing="false" onAction="#logOut" text="Log Out" AnchorPane.rightAnchor="0"/>
    <Button mnemonicParsing="false" onAction="#backToCourseSearch" text="Back to Course Search" AnchorPane.leftAnchor="0"/>
</AnchorPane>

